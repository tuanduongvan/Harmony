@model PBL3Hos.Models.DbModel.UserDoctor
@{
    ViewData["Title"] = "InfoDoctor";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<link rel="stylesheet" href="~/css/infoDoctor.css?v=7">
<link rel="stylesheet" href="~/css/Rate2.css?v=1" />
<div class="container-if">
    <div class="show-doctor-inf">
        <div class="boder-line"></div>
        <a href="./listDoctor.html"><span class="close-log js-close-doctor"><i class="fa-solid fa-xmark"></i></span></a>
        <div class="left-show-doctor">
            @if (Model.ImgFile == null)
            {
                <img src="/fonts/tải xuống.png" alt="">
            }
            else
            {
                <img src="~/PatientsIMG/@Model.ImgFile" alt="">

            }
            <h2>@Model.Fullname</h2>
            <p>@Model.Specialist</p>
            @if (ViewBag.Averagerate!=null){
            if ((int)ViewBag.Averagerate == 5)
            {
                <div class="star">
                    <div class="rating">
                    <input value="5" name="rate" id="star5" type="radio" checked>
                    <label title="text" for="star5"></label>
                        <input value="4" name="rate" id="star4" type="radio" disabled>
                    <label title="text" for="star4"></label>
                        <input value="3" name="rate" id="star3" type="radio" disabled>
                    <label title="text" for="star3"></label>
                        <input value="2" name="rate" id="star2" type="radio" disabled>
                    <label title="text" for="star2"></label>
                        <input value="1" name="rate" id="star1" type="radio" disabled>
                    <label title="text" for="star1"></label>
                </div>
                    <p class="text-rated">(@ViewBag.Averagerate/5)</p>
            </div>
            }
            @if ((int)ViewBag.Averagerate == 4)
            {
                <div class="star">
                    <div class="rating">
                        <input value="5" name="rate" id="star5" type="radio" disabled>
                        <label title="text" for="star5"></label>
                        <input value="4" name="rate" id="star4" type="radio" checked>
                        <label title="text" for="star4"></label>
                        <input value="3" name="rate" id="star3" type="radio" disabled>
                        <label title="text" for="star3"></label>
                        <input value="2" name="rate" id="star2" type="radio" disabled>
                        <label title="text" for="star2"></label>
                        <input value="1" name="rate" id="star1" type="radio" disabled>
                        <label title="text" for="star1"></label>
                    </div>
                    <p class="text-rated">(@ViewBag.Averagerate/5)</p>
                </div>
            }
            @if ((int)ViewBag.Averagerate == 3)
            {
                <div class="star">
                    <div class="rating">
                        <input value="5" name="rate" id="star5" type="radio" disabled>
                        <label title="text" for="star5"></label>
                        <input value="4" name="rate" id="star4" type="radio" disabled>
                        <label title="text" for="star4"></label>
                        <input value="3" name="rate" id="star3" type="radio" checked>
                        <label title="text" for="star3"></label>
                        <input value="2" name="rate" id="star2" type="radio" disabled>
                        <label title="text" for="star2"></label>
                        <input value="1" name="rate" id="star1" type="radio" disabled>
                        <label title="text" for="star1"></label>
                    </div>
                    <p class="text-rated">(@ViewBag.Averagerate/5)</p>
                </div>
            }

            @if ((int)ViewBag.Averagerate == 2)
            {
                <div class="star">
                    <div class="rating">
                        <input value="5" name="rate" id="star5" type="radio" disabled>
                        <label title="text" for="star5" disabled></label>
                        <input value="4" name="rate" id="star4" type="radio" disabled>
                        <label title="text" for="star4" disabled></label>
                        <input value="3" name="rate" id="star3" type="radio" disabled>
                        <label title="text" for="star3" disabled></label>
                        <input value="2" name="rate" id="star2" type="radio" checked>
                        <label title="text" for="star2" disabled></label>
                        <input value="1" name="rate" id="star1" type="radio" disabled>
                        <label title="text" for="star1" disabled></label>
                    </div>
                    <p class="text-rated">(@ViewBag.Averagerate/5)</p>
                </div>
            }

            @if ((int)ViewBag.Averagerate == 1)
            {
                <div class="star">
                    <div class="rating">
                        <input value="5" name="rate" id="star5" type="radio" disabled>
                        <label title="text" for="star5"></label>
                        <input value="4" name="rate" id="star4" type="radio" disabled>
                        <label title="text" for="star4"></label>
                        <input value="3" name="rate" id="star3" type="radio" disabled>
                        <label title="text" for="star3"></label>
                        <input value="2" name="rate" id="star2" type="radio" disabled>
                        <label title="text" for="star2"></label>
                        <input value="1" name="rate" id="star1" type="radio" checked>
                        <label title="text" for="star1"></label>
                    </div>
                    <p class="text-rated">(@ViewBag.Averagerate/5)</p>
                </div>
            }
         }
            <div class="btn-left">
                <button class="login-home-button"><a href="/account/appointment/@Model.AccountId" class="text">Booking Doctor</a></button>
            </div>
        </div>

        <div class="right-show-doctor">
            <div class="right-if-booking">
                <h2>Information</h2>
                <p><strong>Trình độ: </strong>@Model.qualification</p>
                <p><strong>Chuyên khoa: </strong>@Model.Specialist</p>
                <p><strong>Số năm kinh nghiệm: </strong>@Model.yearofexperience</p>
                <h3>Quá trình công tác</h3>
                <ul>
                    @{
                        var careerItems = Model.Career.Split(new char[] { ';', '.' }, StringSplitOptions.RemoveEmptyEntries);
                        foreach (var careerItem in careerItems)
                        {
                            <li>@careerItem.Trim()</li>
                        }
                    }
                </ul>
                <h3>Quá trình học tập</h3>
                <ul>
                    @{
                        var StudyItems = Model.studyprocess.Split(new char[] { ';', '.' }, StringSplitOptions.RemoveEmptyEntries);
                        foreach (var careerItem in StudyItems)
                        {
                            <li>@careerItem.Trim()</li>
                        }
                    }
                </ul>

            </div>
        </div>
    </div>
</div>
<div class="line"></div>
<div class="recomment-container">

    @{
        var ratings = ((IEnumerable<dynamic>)ViewBag.Rating).ToList();
        ratings.Reverse();
    }
    <!-- <h2>Recomment</h2> -->
    @foreach (var item in ratings)
    {
        if (item.Detail != null)
        {
            <div class="recomment-box">
                @if(item.Patient.ImgFile==null){
                <img src="https://png.pngtree.com/png-vector/20190710/ourlarge/pngtree-business-user-profile-vector-png-image_1541960.jpg" alt="">
                }
                else{
                <img src="~/PatientsIMG/@item.Patient.ImgFile" alt="">

                }
                <div class="text-comment">
                    <h3>@item.Patient.Fullname</h3>
                    <p>
                        @item.Detail
                    </p>
                </div>
            </div>
        }
    }
</div>
    </div>
    </div>
    </div>



